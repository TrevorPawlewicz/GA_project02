<!DOCTYPE html>
<html>
<head>
  <title>Picture Time</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
        <% if notice %>
            <div class="alert alert-success"><%= notice %></div>
        <% end %>

        <% if alert %>
            <div class="alert alert-danger"><%= alert %></div>
        <% end %>

        <div class="pull-right">
            <% if(current_user) %>
                <%= link_to root_path, class: "btn btn-default" do %>
                    <i class="glyphicon glyphicon-home"></i> Home
                <% end %>
                <%= link_to 'Profile', current_user, class: "btn btn-info" %>
                <!-- logging out should issue a delete request -->
                <%= link_to 'Log out', logout_path, method: :delete, class: "btn btn-danger" %>
            <% else %>
                <!-- <%= link_to 'Log In', login_path, class: "btn btn-primary" %> DOES NOT WORK -->

                <%= link_to signup_path, class: "btn btn-success" do %>
                    <i class="glyphicon glyphicon-camera"></i> Sign Up
                <% end %>
            <% end %>
        </div>

        <%= yield %>

        <!-- <%= debug current_user %> -->
    </div>
</body>
</html>
