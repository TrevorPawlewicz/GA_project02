<!-- partial -->
<%= form_for @image_post do |i| %>
    <div class="form-group">
        <%= i.label :title %>
        <%= i.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= i.label :url %>
        <%= i.text_field :url, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= i.label :body %>
        <%= i.text_field :body, class: "form-control" %>
    </div>

    <%= i.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel', :back, class: "btn btn-default" %>
<% end %>
